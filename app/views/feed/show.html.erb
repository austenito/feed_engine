<h1>Your Feed</h1>

<% @items.each do |item| %>
  <% if item.class == TextItem %>
     text item: <p><%=item.body%></p>
  <% elsif item.class == ImageItem %>
    image item: <p><%= item.url %></p>  
  <% elsif item.class == LinkItem %>
    link item: <p><%= item.url %></p>
  <% end %>
<% end %>

<% if previous_page? %>
  <%= link_to "Previous", feed_path(:page => "#{@page -1}") %> 
<% end %>
<% if next_page? %>
  <%= link_to "Next", feed_path(:page => "#{@page + 1}") %> 
<% end %>
